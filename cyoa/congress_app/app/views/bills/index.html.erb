
<h1><%="Capitol Hill Bills" %></h1>
<h2> TBD</h2>

<% if user_signed_in?%>
  Logged in as <%=current_user.email%>
  <%=link_to "Sign out", destroy_user_session_path, method: :delete%>
  <% else %>
  <p> <%= link_to "Sign In", new_user_session_path%></p>
  <p> <%= link_to "Register", new_user_registration_path %></p>
  <%end%>

<%= form_tag(bills_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>



<%@bills.each do|result|%>
<div class="container">
 <p><span class="category">Title:</span> <%=link_to result[:official_title], result %><br/></p>
 <p><span class="category">Introduced On:</span> <%=result[:introduced_on]%></p>
 <br/>
</div>
<%end%>
